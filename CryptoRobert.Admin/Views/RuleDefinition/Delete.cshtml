@model CryptoRobert.Admin.Models.RuleDefinitionModel

@{
	ViewBag.Title = "Delete";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>
	Delete Confirmation
</h2>

@*@using (Html.BeginForm("DeleteRule", "RuleDefinition"))*@
@using (Html.BeginForm(new { action = "DeleteRule", controller = "RuleDefinition", id = Model.RuleDef.Id }))
{
	{
		var id = Url.RequestContext.RouteData.Values["id"];
		@Html.HiddenFor(model => model.RuleDef.Id);
	}
	<div>
		<div>
			<p>Are you sure you want to delete Rule '<i>@Html.Encode(Model.RuleDef.Key)</i>'?</p>
		</div>
		<div class="form-group">
			<div class="col-md-offset-2 col-md-10">
				<input type="submit" value="Delete" class="btn btn-primary" />
			</div>

		</div>
	</div>
}

<div>
	<div>
		@Html.ActionLink("Back To List", "Index", new { Model.RuleDef.Id })
	</div>
</div>
