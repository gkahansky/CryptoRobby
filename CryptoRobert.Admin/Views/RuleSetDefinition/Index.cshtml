@model CryptoRobert.Admin.Models.RuleSetDefinitionModel




@{
	ViewBag.Title = "Index";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Welcome to Rule Set Definitions Page</h1>

@using (Html.BeginForm("Create", "RuleDefinition"))
{
	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>RuleId</th>

			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model.Sets)
			{
				<tr>
					<td>@Html.TextBoxFor(model => model.Sets[@item.Key].Id, new { @class = "form-control" })</td>
					<td>@Html.TextBoxFor(model => model.Sets[@item.Key].RuleId, new { @class = "form-control" })</td>
				</tr>
			}
		</tbody>
	</table>
	<div class="form-group">
		<div class="col-md-offset-2 col-md-10">
			<input type="submit" value="Save" class="btn btn-default" />
		</div>
	</div>
	<div>
		@Html.ActionLink("New Rule Set Definition", "New")
	</div>

}
